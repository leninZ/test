<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="textStart" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/optionTittle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#1B8EE0" />

    <CheckBox
        android:id="@+id/vibrar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:button="@drawable/btn_check_holo_light"
        android:onClick="selectVibrar"
        android:text="@string/vibrate"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/sonido"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:button="@drawable/btn_check_holo_light"
        android:gravity="center_vertical|start"
        android:onClick="selectSound"
        android:scrollbars="none"
        android:text="@string/sound"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/lupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:clickable="true"
            android:onClick="selectRingtone"
            android:src="@android:drawable/ic_lock_silent_mode_off" />

        <TextView
            android:id="@+id/selectAlarm"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_weight="0.62"
            android:clickable="true"
            android:onClick="selectRingtone"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#1B8EE0"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>